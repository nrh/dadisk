<!DOCTYPE html>
<html lang="en">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
</head>
<body>
<script src="dadisk.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<script src="bootstrap/js/bootstrap.min.js"></script>
<div class="container">
  <div>
    <ul class="breadcrumb">
      <li{{#rootactive}} class="{{rootactive}}"{{/rootactive}}>
      {{#rootactive}}<a href="{{roottarget}}">{{/rootactive}}{{rootname}}{{#rootactive}}</a>{{/rootactive}}
      {{#breadcrumb}}
      <span class="divider">/</span></li>
      <li{{#class}} class="{{class}}"{{/class}}>
      {{#target}}<a href="?dir={{target}}">{{/target}}{{name}}{{#target}}</a>{{/target}}
      {{/breadcrumb}}
      <li class="pull-right"><form><input onclick="toggle_play();" type="button" class="btn" value="play/pause"></form></li>
      <li class="pull-right"><form><input onclick="toggle_subs();" type="button" class="btn" value="toggle&nbsp;subs"></form></li>
    </ul>
  </div>
  <div>
    <table class="table table-striped table-bordered">
      {{#rows}}
      <tr>
        {{#isdir}}
        <td colspan="2">
          <a href="?dir={{target}}">{{name}}</a>
        </td>
        {{/isdir}}
        {{#isother}}
        <td>
          {{name}}
        </td>
        {{/isother}}
        {{#ismedia}}
        <td>
          <a href="javascript:void(0)" onclick="play_file('{{target}}');">{{name}}</a>
        </td>
        {{/ismedia}}
        {{#size}}
        <td>{{size}}</td>
        {{/size}}
      </tr>
      {{/rows}}
    </table>
  </div>
  <div id="status">
    <pre>
{{pprint}}
    </pre>
  </div>
</div>
</body>
</html>
