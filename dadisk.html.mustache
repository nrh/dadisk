<!DOCTYPE html>
<html lang="en">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
</head>
<body>
<script src="dadisk.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<script src="bootstrap/js/bootstrap.min.js"></script>
<div class="container">
  <div>
    <ul class="breadcrumb">
      {{#breadcrumb}}
      <li{{#class}} class="{{class}}"{{/class}}>
      {{#href}}<a href="{{href}}">{{/href}}{{target}}{{#href}}</a>{{/href}}
      <span class="divider">/</span></li>
      {{/breadcrumb}}
      <li class="pull-right"><form><input onclick="toggle_play();" type="button" class="btn" value="play/pause"></form></li>
      <li class="pull-right"><form><input onclick="toggle_subs();" type="button" class="btn" value="toggle&nbsp;subs"></form></li>
    </ul>
  </div>
  <div id="status">
  </div>
  <div>
    <table class="table table-striped table-bordered">
      {{#rows}}
      <tr>
        <td{{#colspan}} colspan={{colspan}}{{/colspan}}>
          <a href="javascript:void(0)" onclick="play_file('{{target}}');">{{target}}</a>
        </td>
        {{#size}}
        <td>{{size}}</td>
        {{/size}}
      </tr>
      {{/rows}}
    </table>
  </div>
</div>
</body>
</html>
